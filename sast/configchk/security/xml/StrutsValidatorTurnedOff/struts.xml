<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 6.0//EN"
        "https://struts.apache.org/dtds/struts-6.0.dtd">
<struts>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.custom.i18n.resources"
              value="global, cwe660_struts.package, cwe660_struts.register.action.Register"/>

    <package name="cwe660_struts" extends="struts-default">
        ...
        <action name="register" class="org.example.cwe660_struts.register.action.Register" method="execute">
            <interceptor-ref name="validation">
                <param name="excludeMethods">execute</param> <!-- @violation -->
            </interceptor-ref>
            <result name="success">/thankyou.jsp</result>
            <result name="input">/register.jsp</result>
        </action>
        ...
    </package>

    <interceptors>
        <interceptor-stack name="CustomStack">
            <interceptor-ref name="workflow"/>
        </interceptor-stack>
    </interceptors>
</struts>